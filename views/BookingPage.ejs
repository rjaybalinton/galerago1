                    try {
                        if (typeof QRCode !== 'undefined') {
                            const canvas = document.getElementById(`qr-${recordId}`);
                            if (canvas) {
                                const qrText = `Name: ${record.first_name || 'N/A'} ${record.last_name || ''}, Phone: ${record.phone || 'N/A'}, Type: ${record.registration_type || 'Tourist'}`;
                                
